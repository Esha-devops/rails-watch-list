<h1>Create a New Movie List</h1>

<%= simple_form_for @list do |f| %>
  <div class="form-group">
    <%= f.input :name, label: "List Name", placeholder: "Enter a name for your list" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Create List", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to Movie Lists', lists_path, class: "btn btn-secondary" %>
